{
    "name": "screwzira-downloader",
    "version": "4.0.0",
    "description": "",
    "main": "_build/index.js",
    "scripts": {
        "build": "npm run eslint && npm run type-check && npm run test && npm run webpack && npm run nexe && npm run installer",
        "eslint": "eslint src/ test/",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.json .prettierrc tsconfig.json webpack.config.js",
        "test": "jest --coverage",
        "type-check": "tsc --build tsconfig.all.json",
        "webpack": "webpack",
        "nexe": "nexe -t windows-x64-12.18.2 -o dist/screwzira-downloader.exe",
        "check-csc": "ts-node -e \"require(\"\"./launcher/launcherCompiler\"\").checkCscInPath(true)\"",
        "rebuild-launcher": "csc /t:winexe /out:resources/bin/screwzira-downloader-launcher.exe /win32icon:launcher/launcher.ico launcher/launcher.cs",
        "start": "ts-node src/index.ts",
        "installer": "cd installer && cross-env BUILD_VERSION=$npm_package_version \"../bin/nsis-3.05/makensis.exe\" screwzira.nsi && cd .."
    },
    "author": "yoavain",
    "license": "ISC",
    "dependencies": {
        "fs-extra": "9.0.1",
        "got": "11.5.2",
        "node-notifier": "8.0.0",
        "numeral": "2.0.6",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@types/cross-spawn": "6.0.2",
        "@types/fs-extra": "9.0.1",
        "@types/jest": "26.0.12",
        "@types/node": "14.6.2",
        "@types/numeral": "0.0.28",
        "@typescript-eslint/eslint-plugin": "4.0.1",
        "@typescript-eslint/parser": "4.0.1",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "6.1.0",
        "cross-env": "7.0.2",
        "cross-spawn": "7.0.3",
        "eslint": "7.8.0",
        "eslint-import-resolver-typescript": "2.3.0",
        "eslint-plugin-import": "2.22.0",
        "eslint-plugin-jest": "23.20.0",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "husky": "4.2.5",
        "jest": "26.4.2",
        "lint-staged": "10.2.13",
        "nexe": "3.3.7",
        "prettier": "2.1.1",
        "ts-jest": "26.3.0",
        "ts-loader": "8.0.3",
        "ts-node": "9.0.0",
        "typescript": "4.0.2",
        "webpack": "4.44.1",
        "webpack-cli": "3.3.12"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git diff HEAD --exit-code --stat launcher/launcher.cs || npm run check-csc && npm run rebuild-launcher && git add resources/bin/screwzira-downloader-launcher.exe"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
