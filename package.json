{
    "name": "screwzira-downloader",
    "version": "2.8.0",
    "description": "",
    "main": "_build/index.js",
    "scripts": {
        "build": "npm run eslint && npm run tsc && npm run test && npm run webpack && npm run nexe && npm run installer",
        "eslint": "eslint src/**/*.ts test/**/*.ts",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.js .prettierrc tsconfig.json webpack.config.js",
        "test": "jest --coverage",
        "tsc": "tsc",
        "webpack": "webpack",
        "nexe": "nexe -t windows-x64-12.16.2 -o dist/screwzira-downloader.exe",
        "check-csc": "ts-node -e \"require(\"\"./launcher/launcherCompiler\"\").checkCscInPath(true)\"",
        "rebuild-launcher": "csc /t:winexe /out:resources/bin/screwzira-downloader-launcher.exe /win32icon:launcher/launcher.ico launcher/launcher.cs",
        "start": "ts-node src/index.ts",
        "installer": "cd installer && cross-env BUILD_VERSION=$npm_package_version \"../bin/nsis-3.05/makensis.exe\" screwzira.nsi && cd .."
    },
    "author": "yoavain",
    "license": "ISC",
    "dependencies": {
        "fs-extra": "9.0.0",
        "node-notifier": "7.0.0",
        "numeral": "2.0.6",
        "request": "2.88.2",
        "winston": "3.2.1"
    },
    "bundledDependencies": [
        "request"
    ],
    "devDependencies": {
        "@types/cross-spawn": "6.0.1",
        "@types/fs-extra": "8.1.0",
        "@types/jest": "25.2.1",
        "@types/node": "13.11.1",
        "@types/numeral": "0.0.26",
        "@types/request": "2.48.4",
        "@typescript-eslint/eslint-plugin": "2.27.0",
        "@typescript-eslint/parser": "2.27.0",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "5.1.1",
        "cross-env": "7.0.2",
        "cross-spawn": "7.0.2",
        "eslint": "6.8.0",
        "eslint-plugin-import": "2.20.2",
        "eslint-plugin-jest": "23.8.2",
        "eslint-plugin-node": "11.1.0",
        "husky": "4.2.5",
        "jest": "25.3.0",
        "lint-staged": "10.1.3",
        "nexe": "3.3.2",
        "prettier": "2.0.4",
        "ts-jest": "25.3.1",
        "ts-node": "8.8.2",
        "typescript": "3.8.3",
        "webpack": "4.42.1",
        "webpack-cli": "3.3.11"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git diff HEAD --exit-code --stat launcher/launcher.cs || npm run check-csc && npm run rebuild-launcher && git add resources/bin/screwzira-downloader-launcher.exe"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
