{
    "name": "ktuvit-downloader",
    "version": "5.0.1",
    "description": "Download Hebrew subtitles from Ktuvit.me",
    "main": "_build/index.js",
    "scripts": {
        "build": "npm run eslint && npm run type-check && npm run test && npm run webpack && npm run nexe && npm run installer",
        "quick-build-exe": "npm run webpack && npm run nexe",
        "eslint": "eslint src/ test/",
        "eslint:fix": "npm run eslint -- --fix",
        "prettier": "prettier --write *.json .eslintrc.json .prettierrc tsconfig.json webpack.config.js",
        "test": "jest",
        "type-check": "tsc --build tsconfig.all.json",
        "webpack": "webpack",
        "nexe": "nexe -t windows-x64-12.18.2 -o dist/ktuvit-downloader.exe",
        "check-csc": "ts-node -e \"require(\"\"./launcher/launcherCompiler\"\").checkCscInPath(true)\"",
        "rebuild-launcher": "csc /t:winexe /out:resources/bin/ktuvit-downloader-launcher.exe /win32icon:launcher/launcher.ico launcher/launcher.cs",
        "start": "ts-node src/index.ts",
        "installer": "cd installer && cross-env BUILD_VERSION=$npm_package_version \"../bin/nsis-3.05/makensis.exe\" ktuvit.nsi && cd .."
    },
    "author": "yoavain",
    "license": "ISC",
    "engines": {
        "node": "12.20.0"
    },
    "dependencies": {
        "flat-cache": "3.0.4",
        "fs-extra": "9.0.1",
        "got": "11.8.0",
        "node-notifier": "8.0.0",
        "numeral": "2.0.6",
        "winston": "3.3.3"
    },
    "devDependencies": {
        "@types/cross-spawn": "6.0.2",
        "@types/flat-cache": "2.0.0",
        "@types/fs-extra": "9.0.4",
        "@types/jest": "26.0.16",
        "@types/node": "12.19.8",
        "@types/numeral": "0.0.28",
        "@typescript-eslint/eslint-plugin": "4.8.2",
        "@typescript-eslint/parser": "4.8.2",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "6.3.2",
        "cross-env": "7.0.3",
        "cross-spawn": "7.0.3",
        "eslint": "7.15.0",
        "eslint-import-resolver-typescript": "2.3.0",
        "eslint-plugin-import": "2.22.1",
        "eslint-plugin-jest": "24.1.3",
        "eslint-plugin-node": "11.1.0",
        "eslint-plugin-security": "1.4.0",
        "husky": "5.0.4",
        "jest": "26.6.3",
        "lint-staged": "10.5.3",
        "nexe": "3.3.7",
        "prettier": "2.2.1",
        "ts-jest": "26.4.4",
        "ts-loader": "8.0.11",
        "ts-node": "9.1.0",
        "typescript": "4.1.2",
        "uuid": "8.3.1",
        "webpack": "5.10.0",
        "webpack-cli": "4.2.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git diff HEAD --exit-code --stat launcher/launcher.cs || npm run check-csc && npm run rebuild-launcher && git add resources/bin/screwzira-downloader-launcher.exe"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "eslint --fix"
        ],
        "*.json": [
            "prettier --write"
        ]
    }
}
