{
    "name": "screwzira-downloader",
    "version": "2.5.2",
    "description": "",
    "main": "_build/index.js",
    "scripts": {
        "build": "npm run prettier-eslint && npm run tsc && npm run test && npm run webpack && npm run nexe && npm run installer",
        "prettier-eslint": "prettier-eslint --write src/**/*.ts test/**/*.ts",
        "prettier": "prettier --write *.json .eslintrc.js .prettierrc tsconfig.json webpack.config.js",
        "test": "jest --coverage",
        "tsc": "tsc",
        "webpack": "webpack",
        "nexe": "nexe -t windows-x64-12.13.0 -o dist/screwzira-downloader.exe",
        "check-csc": "ts-node -e \"require(\"\"./launcher/launcherCompiler\"\").checkCscInPath(true)\"",
        "rebuild-launcher": "csc /t:winexe /out:resources/bin/screwzira-downloader-launcher.exe /win32icon:launcher/launcher.ico launcher/launcher.cs",
        "start": "ts-node src/index.ts",
        "installer": "cd installer && cross-env BUILD_VERSION=$npm_package_version \"../bin/nsis-3.04/makensis.exe\" screwzira.nsi && cd .."
    },
    "author": "yoavain",
    "license": "ISC",
    "dependencies": {
        "fs-extra": "8.1.0",
        "node-notifier": "file://./bin/node-notifier/node-notifier-7.0.0.tgz",
        "numeral": "2.0.6",
        "request": "2.88.0",
        "winston": "3.2.1"
    },
    "bundledDependencies": [
        "request"
    ],
    "devDependencies": {
        "@types/cross-spawn": "6.0.1",
        "@types/fs-extra": "8.0.1",
        "@types/jest": "24.0.23",
        "@types/node": "12.12.12",
        "@types/numeral": "0.0.26",
        "@types/request": "2.48.3",
        "@typescript-eslint/eslint-plugin": "2.9.0",
        "@typescript-eslint/parser": "2.9.0",
        "clean-webpack-plugin": "3.0.0",
        "copy-webpack-plugin": "5.0.5",
        "cross-env": "6.0.3",
        "cross-spawn": "7.0.1",
        "eslint": "6.7.1",
        "husky": "3.1.0",
        "jest": "24.9.0",
        "lint-staged": "9.4.3",
        "nexe": "3.3.2",
        "prettier": "1.19.1",
        "prettier-eslint": "9.0.0",
        "prettier-eslint-cli": "5.0.0",
        "ts-jest": "24.2.0",
        "ts-node": "8.5.2",
        "typescript": "3.7.2",
        "webpack": "4.41.2",
        "webpack-cli": "3.3.10"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && git diff HEAD --exit-code --stat launcher/launcher.cs || npm run check-csc && npm run rebuild-launcher && git add resources/bin/screwzira-downloader-launcher.exe"
        }
    },
    "lint-staged": {
        "*.(ts|js)": [
            "prettier-eslint --write",
            "git add"
        ],
        "*.json": [
            "prettier --write",
            "git add"
        ]
    }
}
